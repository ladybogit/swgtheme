{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"useTabs": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "always",
	"printWidth": 100,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "*.md",
			"options": {
				"proseWrap": "always"
			}
		}
	]
}
