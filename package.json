{
	"name": "swgtheme",
	"version": "1.0.0",
	"description": "Star Wars Galaxies WordPress Theme - Lords of the Outer Rim",
	"author": "SWG Theme Developers",
	"license": "GPL-2.0-or-later",
	"private": true,
	"scripts": {
		"dev": "webpack --mode development --watch",
		"build": "webpack --mode production",
		"lint:js": "eslint js/**/*.js --fix",
		"lint:css": "stylelint css/**/*.css --fix",
		"lint": "npm run lint:js && npm run lint:css",
		"format": "prettier --write \"**/*.{js,css,json,md}\"",
		"test": "echo \"No tests specified\" && exit 0",
		"zip": "npm run build && npm run create-zip",
		"create-zip": "node scripts/create-zip.js"
	},
	"devDependencies": {
		"@babel/core": "^7.23.0",
		"@babel/preset-env": "^7.23.0",
		"babel-loader": "^9.1.3",
		"css-loader": "^6.8.1",
		"css-minimizer-webpack-plugin": "^5.0.1",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"mini-css-extract-plugin": "^2.7.6",
		"prettier": "^3.0.3",
		"style-loader": "^3.3.3",
		"stylelint": "^15.11.0",
		"stylelint-config-standard": "^34.0.0",
		"terser-webpack-plugin": "^5.3.9",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"keywords": [
		"wordpress",
		"theme",
		"star-wars-galaxies",
		"swg"
	]
}
